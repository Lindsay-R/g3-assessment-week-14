<h2><%= @patient.first_name%> <%= @patient.last_name%></h2>

<h2>Prescriptions</h2>
<h3><%= link_to "Add Prescription", new_patient_prescription_path(@patient.id)%></h3>
<table class="table">
  <thead>
  <tr>
    <th>Medication</th>
    <th>Dosage/Schedule</th>
    <th>Dates</th>
  </tr>
  </thead>
  <tbody>
  <% @prescriptions.each do |prescription| %>
    <tr>
      <td>medication</td>
      <td><%= prescription.dosage %>, <%= prescription.schedule %></td>
      <td><%= prescription.date_start %> | <%= prescription.date_end %></td>
    </tr>
  <% end %>
  </tbody>
</table>

